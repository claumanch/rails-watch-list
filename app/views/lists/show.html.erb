<h1>List: <%= @list.name %></h1>

<ul>
  <% @list.bookmarks.each do |mark| %>
    <li><%= mark.movie.title %></li>
    <li><%= link_to mark.comment, bookmark_path(mark) %></li>
  <% end %>
</ul>

  <%= simple_form_for [@list, @bookmark]  do |f| %>
    <%= f.input :comment %>
    <%= f.association :movie %>
    <%= f.submit %>
  <% end %>

<%= link_to "Back to Lists", lists_path %>
